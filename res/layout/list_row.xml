<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/tag1TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/domainTextView"
        android:layout_below="@+id/domainTextView"
        android:hint="@string/tagHintString"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/tag2TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tag1TextView"
        android:layout_alignBottom="@+id/tag1TextView"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/tag1TextView"
        android:hint="@string/tagHintString"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/tag3TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tag2TextView"
        android:layout_alignBottom="@+id/tag2TextView"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/tag2TextView"
        android:hint="@string/tagHintString"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="18dp"
        android:hint="@string/titleHintString"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/domainTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/titleTextView"
        android:layout_below="@+id/titleTextView"
        android:hint="@string/domainHintString"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>
